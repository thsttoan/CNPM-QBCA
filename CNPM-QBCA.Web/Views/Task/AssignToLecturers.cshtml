@model List<QBCA.Models.TaskAssignment>
@{
    ViewBag.Title = "Assign To Lecturers";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container py-4">
    <div class="main-content-area">
        <div style="margin-bottom: 18px;">
            <h2 class="fw-bold mb-2" style="font-size:2.1rem;">Assign To Lecturers</h2>
            <div class="text-secondary" style="font-size:1.18rem;">View tasks assigned to lecturers.</div>
        </div>

        <div class="mb-4 w-100" style="display: flex; justify-content: flex-start;">
            <a href="@Url.Action("Create", "Task")"
               class="btn btn-signin-custom"
               style="font-size:1.15rem; min-width:240px;">
                Assign New Task
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show py-2 px-3" role="alert" style="border-radius:10px;">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="top:9px;"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show py-2 px-3" role="alert" style="border-radius:10px;">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="top:9px;"></button>
            </div>
        }

        <div class="table-container">
            <table class="table subject-table mb-0">
                <thead>
                    <tr>
                        <th style="width:5%;">ID</th>
                        <th style="width:10%;">Task Type</th>
                        <th style="width:10%;">Status</th>
                        <th style="width:10%;">Due Date</th>
                        <th style="width:10%;">Assigned To</th>
                        <th style="width:10%;">Exam Plan</th>
                        <th style="width:10%;">Distribution</th>
                        <th style="width:10%;">Created At</th>
                        <th style="width:8%;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var task in Model)
                        {
                            <tr>
                                <td>@task.AssignmentID</td>
                                <td>@task.TaskType</td>
                                <td>@task.Status</td>
                                <td>@(task.DueDate?.AddHours(7).ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>@task.Assignee?.FullName</td>
                                <td>@task.ExamPlan?.Name</td>
                                <td>@task.Distribution?.DistributionID</td>
                                <td>@task.CreatedAt.AddHours(7).ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Task", new { id = task.AssignmentID })" class="btn btn-sm btn-outline-primary rounded-pill me-1">Edit</a>
                                    @using (Html.BeginForm("Delete", "Task", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this Task?');", style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", task.AssignmentID)
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center py-4 text-muted">
                                <i class="fas fa-tasks fa-lg mb-2"></i><br />
                                <span style="font-size:1.11rem;">No tasks assigned to you.</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .main-content-area {
            margin-left: 34px;
            margin-right: 34px;
        }

        .btn-signin-custom {
            background: #6d82f3;
            color: #fff;
            border: none;
            border-radius: 16px;
            padding: 14px 0;
            transition: background 0.2s;
            text-align: center;
            margin-bottom: 4px;
            box-shadow: 0 2px 8px #0001;
            font-size: 1.16rem;
            font-weight: 600;
            display: block;
        }

            .btn-signin-custom:hover, .btn-signin-custom:focus {
                background: #5a6ed0;
                color: #fff;
            }

        .table-container {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 1px 6px #0000000d;
            padding: 0.5rem;
            margin-bottom: 20px;
        }

        .subject-table {
            border-collapse: separate;
            border-spacing: 0;
            font-size: 1.17rem;
            min-width: 900px;
        }

            .subject-table thead tr th {
                background: #6277ea;
                color: #fff;
                border: none;
                font-weight: 700;
                font-size: 1.18rem;
                text-align: left;
                padding-left: 24px;
                padding-top: 15px;
                padding-bottom: 15px;
            }

                .subject-table thead tr th:first-child {
                    border-top-left-radius: 11px;
                }

                .subject-table thead tr th:last-child {
                    border-top-right-radius: 11px;
                }

            .subject-table tbody tr {
                background: #fafbfc;
                border-bottom: 1px solid #e6e7eb;
            }

            .subject-table td {
                vertical-align: middle;
                padding: 0.88rem 0.8rem 0.88rem 24px;
                font-size: 1.14rem;
            }

        @@media (max-width: 1100px) {
            .main-content-area,
            .table-container {
                margin-left: 2vw !important;
                margin-right: 2vw !important;
            }

            .subject-table {
                font-size: 1rem;
            }

                .subject-table thead tr th {
                    font-size: 1rem;
                    padding-left: 10px;
                }

                .subject-table td {
                    padding-left: 10px;
                    font-size: 1rem;
                }
        }
    </style>
}
