@model QBCA.ViewModels.AssignedPlanViewModel
@{
    ViewBag.Title = "Delete Assigned Plan";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        font-size: 17px;
    }

    .neumorphic-box {
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        padding: 40px;
        max-width: 700px;
        margin: 100px auto;
        text-align: center;
    }

    h3 {
        font-size: 1.7rem;
        font-weight: 700;
        color: #4F46E5;
    }

    .neumorphic-label {
        font-weight: 600;
        color: #36395A;
        margin-top: 20px;
        margin-bottom: 10px;
        display: block;
        font-size: 1.05rem;
    }

    .neumorphic-text {
        padding: 14px;
        margin-bottom: 20px;
        background: #f2f3f7;
        border-radius: 12px;
        box-shadow: inset 6px 6px 10px #d1d9e6, inset -6px -6px 10px #ffffff;
        color: #333;
        font-size: 1rem;
    }

    .neumorphic-warning {
        color: #EF4444;
        font-size: 1.15rem;
        font-weight: bold;
        margin-bottom: 25px;
    }

    .neumorphic-button {
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 12px;
        border: none;
        margin: 5px 10px;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-cancel {
        background-color: #f2f3f7;
        color: #4F46E5;
        box-shadow: 5px 5px 10px #d1d9e6, -5px -5px 10px #ffffff;
    }

        .btn-cancel:hover {
            box-shadow: inset 5px 5px 10px #d1d9e6, inset -5px -5px 10px #ffffff;
            background: #e6e8f0;
        }

    .btn-delete {
        background-color: #EF4444;
        color: white;
        box-shadow: 5px 5px 10px #d1d9e6, -5px -5px 10px #ffffff;
    }

        .btn-delete:hover {
            background-color: #DC2626;
        }
</style>

<div class="neumorphic-box">
    <h3>🗑️ Confirm Delete</h3>

    <p class="neumorphic-warning">Are you sure you want to delete this assigned plan?</p>

    <label class="neumorphic-label">Subject:</label>
    <div class="neumorphic-text">@Model.SubjectName</div>

    <label class="neumorphic-label">Assigned To:</label>
    <div class="neumorphic-text">@Model.AssignedToName</div>

    <label class="neumorphic-label">Deadline:</label>
    <div class="neumorphic-text">@Model.Deadline.ToString("dd/MM/yyyy")</div>

    <label class="neumorphic-label">Status:</label>
    <div class="neumorphic-text">@Model.Status.ToString().Replace("Final", "Final ")</div>

    @using (Html.BeginForm("Delete", "AssignedPlan", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.AssignedPlanID)

        <button type="submit" class="neumorphic-button btn-delete">✅ Yes, Delete</button>
        <a href="@Url.Action("Plans", "AssignedPlan")" class="neumorphic-button btn-cancel">← Cancel</a>
    }
</div>
