@model List<QBCA.Models.Exam>
@{
    ViewBag.Title = "Submitted Exams";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container py-4">
    <div class="main-content-area">
        <div style="margin-bottom: 18px;">
            <h2 class="fw-bold mb-2" style="font-size:2.1rem;">Submitted Exams</h2>
            <div class="text-secondary" style="font-size:1.18rem;">List of submitted exams and their details.</div>
        </div>
        <div class="table-container table-responsive">
            <table class="table subject-table mb-0">
                <thead>
                    <tr>
                        <th style="width:5%;">ID</th>
                        <th style="width:15%;">Title</th>
						<th style="width:15%;">Exam Plan</th>
                        <th style="width:10%;">Distribution ID</th>
                        <th style="width:15%;">Start Date</th>
                        <th style="width:15%;">End Date</th>
                        <th style="width:15%;">Submit Date</th>
                        <th style="width:20%;">Submitted By</th>
                        <th style="width:10%;">Status</th>
                        <th style="width:25%;">Description</th>
                        <th style="width:20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var exam in Model)
                        {
                            <tr>
                                <td>@exam.ExamID</td>
                                <td>@exam.Title</td>
                                <td>@exam.ExamPlanDistribution?.ExamPlan?.Name</td>
                                <td>@exam.DistributionID</td>
                                <td>@exam.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@exam.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>@exam.SubmitDate.ToString("yyyy-MM-dd")</td>
                                <td>@exam.Submitter?.FullName</td>
                                <td>@exam.Status</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(exam.Description))
                                    {
                                        <span title="@exam.Description">
                                            @(exam.Description.Length > 60 ? exam.Description.Substring(0, 60) + "..." : exam.Description)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Exam", new { id = exam.ExamID })" class="btn btn-sm btn-outline-primary rounded-pill me-1">Edit</a>
                                    @using (Html.BeginForm("Delete", "Exam", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this Exam?');", style = "display:inline;" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("id", exam.ExamID)
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4 text-muted">
                                <i class="fas fa-file-alt fa-lg mb-2"></i><br />
                                <span style="font-size:1.11rem;">No submitted exams found.</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .main-content-area {
            margin-left: 34px;
            margin-right: 34px;
        }

        .table-container {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 1px 6px #0000000d;
            padding: 0.5rem;
            margin-bottom: 20px;
        }

        .subject-table {
            border-collapse: separate;
            border-spacing: 0;
            font-size: 1.1rem;
            min-width: 1000px;
        }

            .subject-table thead tr th {
                background: #6277ea;
                color: #fff;
                border: none;
                font-weight: 700;
                text-align: left;
                padding-left: 24px;
                padding-top: 15px;
                padding-bottom: 15px;
            }

                .subject-table thead tr th:first-child {
                    border-top-left-radius: 11px;
                }

                .subject-table thead tr th:last-child {
                    border-top-right-radius: 11px;
                }

            .subject-table tbody tr {
                background: #fafbfc;
                border-bottom: 1px solid #e6e7eb;
            }

            .subject-table td {
                vertical-align: middle;
                padding: 0.88rem 0.8rem 0.88rem 24px;
            }

        @@media (max-width: 1100px) {
            .main-content-area, .table-container

        {
            margin-left: 2vw !important;
            margin-right: 2vw !important;
        }

        .subject-table {
            font-size: 0.95rem;
        }

            .subject-table thead tr th {
                font-size: 1rem;
                padding-left: 10px;
            }

            .subject-table td {
                padding-left: 10px;
                font-size: 0.95rem;
            }
        }
    </style>
}
