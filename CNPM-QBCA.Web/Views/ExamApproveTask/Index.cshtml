@using CNPM_QBCA.ViewModels
@model IEnumerable<ApproveExamTaskViewModel>

@{
    ViewBag.Title = "Approve/Update Exam";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="container py-4">
    <div class="main-content-area">
        <div style="margin-bottom: 18px;">
            <h2 class="fw-bold mb-2" style="font-size:2.1rem;">Approve/Update Exam</h2>
            <div class="text-secondary" style="font-size:1.18rem;">View exams assigned to you.</div>
        </div>

        <div class="table-container">
            <table class="table subject-table mb-0">
                <thead>
                    <tr>
                        <th style="width:7%;">ID</th>
                        <th style="width:25%;">Exam Title</th>
                        <th style="width:15%;">Status</th>
                        <th style="width:15%;">Assigned Date</th>
                        <th style="width:23%;">Assigned By</th>
                        <th style="width:15%;">Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var task in Model)
                        {
                            <tr>
                                <td>@task.TaskID</td>
                                <td>
                                    <a class="text-decoration-none"
                                       asp-controller="ExamApproveTask"
                                       asp-action="Details"
                                       asp-route-id="@task.TaskID">
                                        @task.ExamTitle
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-@(task.Status == "Approved" ? "success" :
                                                                                                        task.Status == "Rejected" ? "danger" :
                                                                                                        "warning")">
                                @task.Status
                            </span>
                        </td>
                        <td>@task.AssignedDate.AddHours(7).ToString("yyyy-MM-dd")</td>
                        <td>@task.AssignedBy</td>
                        <td>@task.CreatedAt.AddHours(7).ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="fas fa-tasks fa-lg mb-2"></i><br />
                                <span style="font-size:1.11rem;">No exams assigned to you.</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .assign-btn-neumorphic {
            display: inline-block;
            padding: 10px 24px;
            background: #f0f4ff;
            color: #3253f1;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.05rem;
            text-decoration: none;
            box-shadow: 4px 4px 8px #d4d8e5, -4px -4px 8px #ffffff;
            transition: all 0.2s ease;
            border: none;
        }

            .assign-btn-neumorphic:hover {
                box-shadow: inset 3px 3px 5px #d4d8e5, inset -3px -3px 5px #ffffff;
                background-color: #e0e9ff;
                color: #1f3cc4;
            }

        .main-content-area {
            margin-left: 34px;
            margin-right: 34px;
        }

        .table-container {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 1px 6px #0000000d;
            padding: 0.5rem;
            margin-bottom: 20px;
        }

        .subject-table {
            border-collapse: separate;
            border-spacing: 0;
            font-size: 1.17rem;
            min-width: 900px;
        }

            .subject-table thead tr th {
                background: #6277ea;
                color: #fff;
                border: none;
                font-weight: 700;
                font-size: 1.18rem;
                text-align: left;
                padding-left: 24px;
                padding-top: 15px;
                padding-bottom: 15px;
            }

                .subject-table thead tr th:first-child {
                    border-top-left-radius: 11px;
                }

                .subject-table thead tr th:last-child {
                    border-top-right-radius: 11px;
                }

            .subject-table tbody tr {
                background: #fafbfc;
                border-bottom: 1px solid #e6e7eb;
            }

            .subject-table td {
                vertical-align: middle;
                padding: 0.88rem 0.8rem 0.88rem 24px;
                font-size: 1.14rem;
            }

        @@media (max-width: 1100px) {
            .main-content-area,
            .table-container {
                margin-left: 2vw !important;
                margin-right: 2vw !important;
            }

            .subject-table {
                font-size: 1rem;
            }

                .subject-table thead tr th {
                    font-size: 1rem;
                    padding-left: 10px;
                }

                .subject-table td {
                    padding-left: 10px;
                    font-size: 1rem;
                }
        }
    </style>
}
