@model QBCA.ViewModels.AssignTaskViewModel
@{
    ViewBag.Title = "Edit Task";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .neumorphic-wrapper {
        max-width: 720px;
        margin: 80px auto;
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 10px 10px 20px #d1d9e6, -10px -10px 20px #ffffff;
        padding: 50px;
        font-size: 18px;
    }

    .title {
        font-size: 30px;
        font-weight: 700;
        color: #059669;
        text-align: center;
        margin-bottom: 35px;
    }

    label {
        font-weight: 600;
        color: #36395A;
        margin-bottom: 10px;
        display: block;
        font-size: 18px;
    }

    input[type="text"],
    input[type="date"],
    select {
        width: 100%;
        padding: 16px 20px;
        border-radius: 14px;
        border: none;
        font-size: 17px;
        background: #f2f3f7;
        box-shadow: inset 5px 5px 10px #d1d9e6, inset -5px -5px 10px #ffffff;
        margin-bottom: 25px;
        transition: 0.3s ease;
    }

        input:focus,
        select:focus {
            outline: none;
            box-shadow: inset 3px 3px 8px #d1d9e6, inset -3px -3px 8px #ffffff;
        }

    .btn-update {
        background-color: #059669;
        color: white;
        font-size: 18px;
        padding: 15px;
        border-radius: 14px;
        border: none;
        font-weight: 600;
        width: 100%;
        box-shadow: 5px 5px 10px #d1d9e6, -5px -5px 10px #ffffff;
        transition: 0.3s ease;
    }

        .btn-update:hover {
            background-color: #047857;
        }

    .text-danger {
        font-size: 0.95rem;
        margin-top: -12px;
        margin-bottom: 15px;
        display: block;
    }
</style>

<div class="neumorphic-wrapper">
    <h3 class="title">✏️ Edit Task</h3>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TaskID" />

        <div class="form-group">
            <label asp-for="TaskType">Task Title</label>
            <input asp-for="TaskType" />
            <span asp-validation-for="TaskType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AssignedToID">Assign To</label>
            <select asp-for="AssignedToID" asp-items="@(new SelectList(Model.AllLecturers, "UserID", "FullName", Model.AssignedToID))">
                <option value="">-- Select Lecturer --</option>
            </select>
            <span asp-validation-for="AssignedToID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Deadline">Deadline</label>
            <input asp-for="Deadline" type="date" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Status</label>
            <select asp-for="Status">
                <option value="">-- Select Status --</option>
                <option value="Assigned">🔵 Assigned</option>
                <option value="InProgress">🟡 In Progress</option>
                <option value="Completed">🟢 Completed</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-update">💾 Update Task</button>
    </form>
</div>
