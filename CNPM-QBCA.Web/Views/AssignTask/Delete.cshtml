@model QBCA.ViewModels.AssignTaskViewModel
@{
    ViewBag.Title = "Delete Task";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<style>
    .neumorphic-box {
        background: #f2f3f7;
        border-radius: 25px;
        box-shadow: 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff;
        padding: 50px;
        max-width: 650px;
        margin: 100px auto;
        text-align: center;
        font-size: 18px;
    }

    h3 {
        color: #dc2626;
        font-weight: bold;
        font-size: 28px;
        margin-bottom: 25px;
    }

    .task-info {
        margin: 18px 0;
        font-weight: 600;
        font-size: 20px;
    }

    .btn-danger {
        background-color: #dc2626;
        color: white;
        padding: 14px 26px;
        border: none;
        border-radius: 14px;
        font-weight: bold;
        font-size: 17px;
        margin-right: 12px;
        box-shadow: 6px 6px 12px #d1d9e6, -6px -6px 12px #ffffff;
        transition: 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            cursor: pointer;
        }

    .btn-cancel {
        background-color: #6b7280;
        color: white;
        padding: 14px 26px;
        border: none;
        border-radius: 14px;
        font-weight: bold;
        font-size: 17px;
        text-decoration: none;
        box-shadow: 6px 6px 12px #d1d9e6, -6px -6px 12px #ffffff;
        transition: 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #374151;
        }
</style>

<div class="neumorphic-box">
    <h3>🗑 Confirm Delete</h3>

    <p style="margin-bottom: 25px;">Are you sure you want to delete the following task?</p>

    <div class="task-info">📌 <strong>Task:</strong> @Model.TaskType</div>
    <div class="task-info">👤 <strong>Assigned To:</strong> @Model.AssignedToName</div>
    <div class="task-info">⏳ <strong>Deadline:</strong> @Model.Deadline.ToString("dd/MM/yyyy")</div>

    <form asp-action="DeleteConfirmed" method="post" style="margin-top: 35px;">
        <input type="hidden" asp-for="TaskID" />
        <button type="submit" class="btn-danger">✅ Yes, Delete</button>
        <a href="@Url.Action("Task", "AssignTask")" class="btn-cancel">🔙 Cancel</a>
    </form>
</div>
