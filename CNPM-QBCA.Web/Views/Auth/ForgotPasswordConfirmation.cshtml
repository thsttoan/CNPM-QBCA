@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QBCA - Password Reset</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9;
        }

        .background-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .shape {
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            opacity: 0.2;
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                top: 10%;
                left: 10%;
            }

            .shape:nth-child(2) {
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                bottom: 10%;
                right: 10%;
                animation-delay: 6s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .confirmation-container {
            position: relative;
            max-width: 450px;
            margin: 80px auto;
            padding: 40px;
            background-color: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            z-index: 1;
            text-align: center;
        }

        .success-icon {
            font-size: 64px;
            color: #28a745;
            margin-bottom: 20px;
        }

        .title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
        }

        .subtitle {
            font-size: 16px;
            color: #666;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .info-text {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            color: #495057;
            font-size: 14px;
            line-height: 1.6;
        }

        .back-button {
            display: inline-block;
            padding: 12px 30px;
            background-color: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .back-button:hover {
                background-color: #5a67d8;
                text-decoration: none;
                color: white;
            }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }
    </style>
</head>

<body>
    <div class="background-shapes">
        <div class="shape"></div><div class="shape"></div><div class="shape"></div><div class="shape"></div>
    </div>

    <div class="confirmation-container">
        <div class="success-icon">✅</div>
        <div class="title">Password Reset Request Sent</div>
        <div class="subtitle">We've received your password reset request</div>

        <div class="info-text">
            <p><strong>What happens next?</strong></p>
            <p>If an account with the provided email address exists in our system, you should receive password reset instructions shortly.</p>
            <p>Please check your email inbox and spam folder.</p>
            <p><em>Note: For security reasons, we don't confirm whether the email address exists in our system.</em></p>
        </div>

        <a href="@Url.Action("Login", "Auth")" class="back-button">
            ← Back to Login
        </a>

        <div class="footer-text">© 2025 UTH University - R&D Department</div>
    </div>
</body>
</html>