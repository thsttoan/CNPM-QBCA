    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewBag.Title = "Head of Examination Department Dashboard";
    ViewBag.UserName = "Exam Head";
    ViewBag.RoleName = "Head of Examination Department";
    ViewBag.AvatarInitials = "EH";
}
@section SidebarMenu {
    <ul class="sidebar-menu">
        <li><a href="@Url.Action("Home_ExamHead", "Home")"><i class="fas fa-tachometer-alt menu-icon"></i><span class="menu-text">Dashboard</span></a></li>
        <li><a href="@Url.Action("AssignedTasks", "Exam")"><i class="fas fa-tasks menu-icon"></i><span class="menu-text">Assigned Tasks</span></a></li>
        <li><a href="@Url.Action("AssignToLecturers", "Exam")"><i class="fas fa-user-plus menu-icon"></i><span class="menu-text">Assign to Lecturers</span></a></li>
        <li><a href="@Url.Action("ReviewExams", "Exam")"><i class="fas fa-search-plus menu-icon"></i><span class="menu-text">Review Exams</span></a></li>
