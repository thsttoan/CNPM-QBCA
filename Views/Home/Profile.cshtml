@{
    Layout = null;
    string fullName = (string)ViewBag.FullName ?? "User";
    string email = (string)ViewBag.Email ?? "";
    string role = (string)ViewBag.Role ?? "";

    // Lấy duy nhất 1 chữ cái đầu tiên của tên
    string avatarText = !string.IsNullOrWhiteSpace(fullName)
        ? fullName.Trim().Substring(0, 1).ToUpper()
        : "U";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QBCA - Profile</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9;
        }

        .background-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .shape {
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            opacity: 0.2;
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                top: 10%;
                left: 10%;
            }

            .shape:nth-child(2) {
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                bottom: 10%;
                right: 10%;
                animation-delay: 6s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .profile-container {
            position: relative;
            max-width: 400px;
            margin: 60px auto;
            padding: 40px;
            background-color: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            z-index: 1;
            text-align: center;
        }

        .avatar {
            width: 88px;
            height: 88px;
            border-radius: 50%;
            margin: 0 auto 18px auto;
            background: linear-gradient(135deg, #667eea 60%, #764ba2 100%);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            font-weight: bold;
            letter-spacing: 1px;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.15);
            border: 2px solid #fff;
            user-select: none;
        }

        .profile-name {
            font-size: 22px;
            font-weight: 600;
            color: #333;
            margin-bottom: 4px;
        }

        .profile-email {
            color: #666;
            font-size: 15px;
            margin-bottom: 7px;
        }

        .profile-role {
            font-size: 15px;
            color: #667eea;
            font-weight: bold;
            margin-bottom: 18px;
        }

        .profile-actions {
            margin-top: 25px;
            display: flex;
            justify-content: center;
            gap: 18px;
        }

            .profile-actions a {
                text-decoration: none;
                padding: 10px 22px;
                border-radius: 5px;
                font-size: 15px;
                font-weight: 600;
                transition: background-color 0.3s;
                border: none;
                cursor: pointer;
                background: #667eea;
                color: #fff;
                box-shadow: 0 1px 4px rgba(102,126,234,0.08);
            }

                .profile-actions a.back {
                    background: #e2e8f0;
                    color: #667eea;
                }

                .profile-actions a:not(.back):hover {
                    background: #5a67d8;
                }

                .profile-actions a.back:hover {
                    background: #cbd5e1;
                    color: #4c51bf;
                }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="background-shapes">
        <div class="shape"></div><div class="shape"></div><div class="shape"></div><div class="shape"></div>
    </div>
    <div class="profile-container">
        <div class="avatar">@avatarText</div>
        <div class="profile-name">@fullName</div>
        <div class="profile-email">@email</div>
        <div class="profile-role">@role</div>
        <div class="profile-actions">
            <a href="@Url.Action("Edit", "Profile")">Edit Profile</a>
            <a href="@Url.Action("Index", "Home")" class="back">Back to Dashboard</a>
        </div>
        <div class="footer-text">© 2025 UTH University - R&D Department</div>
    </div>
</body>
</html>