@{
    Layout = null;
    ViewBag.Title = "Access Denied";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QBCA - Access Denied</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9;
        }

        .background-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .shape {
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            opacity: 0.2;
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                top: 10%;
                left: 10%;
            }

            .shape:nth-child(2) {
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                bottom: 10%;
                right: 10%;
                animation-delay: 6s;
            }
        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        .denied-container {
            position: relative;
            max-width: 400px;
            margin: 80px auto;
            padding: 40px;
            background-color: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            z-index: 1;
            text-align: center;
        }

        .logo {
            font-size: 64px;
            font-weight: bold;
            text-align: center;
            color: #667eea;
        }

        .logo-text {
            text-align: center;
            font-size: 24px;
            font-weight: 600;
            margin-top: 10px;
            color: #333;
        }

        .logo-subtitle {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-bottom: 30px;
        }

        .icon-warning {
            margin-bottom: 12px;
        }

        .btn {
            display: inline-block;
            margin: 8px 4px 0 4px;
            padding: 10px 22px;
            border-radius: 5px;
            font-size: 16px;
            text-decoration: none;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: background 0.2s;
        }

        .btn-primary {
            background-color: #667eea;
            color: white;
        }

            .btn-primary:hover {
                background-color: #5a67d8;
            }

        .btn-danger {
            background-color: #e74c3c;
            color: white;
            margin-right: 8px;
        }

            .btn-danger:hover {
                background-color: #c0392b;
            }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="background-shapes">
        <div class="shape"></div><div class="shape"></div><div class="shape"></div><div class="shape"></div>
    </div>
    <div class="denied-container">
        <div class="logo">Q</div>
        <div class="logo-text">QBCA</div>
        <div class="logo-subtitle">Question Bank Checking Application</div>

        <div class="icon-warning">
            <i class="fas fa-exclamation-triangle" style="font-size:40px; color:#e74c3c;"></i>
        </div>
        <h2 style="color:#e74c3c; margin-top:18px;">Access Denied!</h2>
        <p style="font-size:18px; margin-bottom: 14px;">
            @ViewBag.Message You do not have permission to access this page.
        </p>
        <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">
            <i class="fas fa-sign-out-alt"></i> Log out & Sign in again
        </a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
            <i class="fas fa-home"></i> Back to Home
        </a>
        <div class="footer-text">© 2025 UTH University - R&D Department</div>
    </div>
</body>
</html>