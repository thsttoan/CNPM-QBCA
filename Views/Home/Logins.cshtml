@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QBCA - Recent Logins</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f6f9;
        }

        .background-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .shape {
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            opacity: 0.2;
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                top: 10%;
                left: 10%;
            }

            .shape:nth-child(2) {
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                bottom: 10%;
                right: 10%;
                animation-delay: 6s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .login-container {
            position: relative;
            max-width: 480px;
            margin: 60px auto;
            padding: 36px 12px 28px 12px;
            background-color: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 14px;
            z-index: 1;
        }

        .logo {
            font-size: 64px;
            font-weight: bold;
            text-align: center;
            color: #667eea;
        }

        .logo-text {
            text-align: center;
            font-size: 24px;
            font-weight: 600;
            margin-top: 10px;
            color: #333;
        }

        .logo-subtitle {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-bottom: 30px;
        }

        .recent-logins-title {
            text-align: left;
            font-size: 20px;
            font-weight: 600;
            color: #444;
            margin-bottom: 16px;
            margin-top: 8px;
            letter-spacing: 0.5px;
        }

        .table-responsive {
            width: 100%;
            overflow-x: auto;
            margin-bottom: 18px;
        }

        .logins-table {
            width: 100%;
            min-width: 400px;
            border-collapse: separate;
            border-spacing: 0;
            background: #fafbfc;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(102,126,234,0.06);
        }

            .logins-table th, .logins-table td {
                padding: 11px 8px;
                text-align: left;
            }

            .logins-table th {
                background-color: #667eea;
                color: #fff;
                font-size: 14px;
                font-weight: 500;
                border: none;
            }

            .logins-table td {
                font-size: 13px;
                color: #333;
                border-top: 1px solid #e6e8ef;
                word-break: break-word;
            }

            .logins-table tr:last-child td {
                border-bottom: none;
            }

            .logins-table tr:nth-child(even) td {
                background-color: #f5f6fa;
            }

            .logins-table tr:hover td {
                background: #e9edfa;
            }

        .no-records {
            text-align: center;
            color: #e74c3c;
            font-size: 15px;
            padding: 16px 0;
        }

        .btn-home {
            display: inline-block;
            margin: 24px 0 0 0;
            padding: 10px 24px;
            background-color: #667eea;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            text-decoration: none;
            font-weight: 500;
            transition: 0.3s;
        }

            .btn-home:hover {
                background-color: #5a67d8;
                color: #f3f3f3;
                text-decoration: none;
            }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="background-shapes">
        <div class="shape"></div><div class="shape"></div><div class="shape"></div><div class="shape"></div>
    </div>
    <div class="login-container">
        <div class="logo">Q</div>
        <div class="logo-text">QBCA</div>
        <div class="logo-subtitle">Question Bank Checking Application</div>
        @model List<QBCA.Models.Login>
        <div class="recent-logins-title">Recent Logins</div>
        <div class="table-responsive">
            <table class="logins-table">
                <thead>
                    <tr>
                        <th style="width:32px;">#</th>
                        <th style="min-width:120px;">Email</th>
                        <th style="min-width:120px;">Role</th>
                        <th style="min-width:110px;">Login Time (VN)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            var roleName = Model[i].RoleID switch
                            {
                                1 => "R&D Staff",
                                2 => "Lecturer",
                                3 => "Head of Dept",
                                4 => "Subject Leader",
                                5 => "Head of Examination Department",
                                _ => "Unknown"
                            };
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Email</td>
                                <td>@roleName</td>
                                <td>
                                    <span style="font-family: 'Consolas', monospace;">
                                        @Model[i].LastLogin.AddHours(7).ToString("yyyy-MM-dd HH:mm:ss")
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="no-records">No login records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="@Url.Action("Index", "Home")" class="btn-home">Back to Dashboard</a>
        <div class="footer-text">© 2025 UTH University - R&D Department</div>
    </div>
</body>
</html>