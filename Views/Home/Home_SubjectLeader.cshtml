    ViewBag.AvatarInitials = "SL";
}
@section SidebarMenu {
    <ul class="sidebar-menu">
        <li><a href="@Url.Action("Home_SubjectLeader", "Home")"><i class="fas fa-tachometer-alt menu-icon"></i><span class="menu-text">Dashboard</span></a></li>
        <li><a href="@Url.Action("TeamTasks", "Task")"><i class="fas fa-users menu-icon"></i><span class="menu-text">Team Tasks</span></a></li>
